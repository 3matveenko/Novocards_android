<resources>

	<style name="AppTheme.Dialog" parent="Theme.AppCompat.Dialog.Alert">
		<item name="android:background">@color/colorBackgroundDark</item>
	</style>

	<style name="AppThemeLight.Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">

	</style>

	<style name="AppTheme.BottomSheet" parent="Theme.MaterialComponents.BottomSheetDialog">
		<item name="colorPrimary">#3F51B5</item>
		<item name="colorPrimaryDark">#0c072a</item>
		<item name="colorAccent">#43f5fe</item>
		<item name="android:panelBackground">@color/colorBackgroundDark</item>
		<item name="android:textColorLink">@color/link_dark</item>
		<item name="android:textColorPrimary">@color/textColorDarkPrimary</item>
		<item name="android:textColorSecondary">@color/textColorDarkSecondary</item>
		<item name="android:textColorTertiary">@color/textColorDarkTertiary</item>
	</style>

	<style name="AppThemeLight.BottomSheet" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
		<item name="colorPrimary">#3F51B5</item>
		<item name="colorPrimaryDark">#686387</item>
		<item name="colorAccent">#43f7ff</item>
		<item name="android:panelBackground">@color/colorBackgroundLight</item>
		<item name="android:textColorPrimary">@color/textColorLightPrimary</item>
		<item name="android:textColorSecondary">@color/textColorLightSecondary</item>
		<item name="android:textColorTertiary">@color/textColorLightTertiary</item>
	</style>

	<!-- Splash Screen Theme -->

	<style name="toolbarImageButton">
		<item name="android:layout_width">?attr/actionBarSize</item>
		<item name="android:layout_height">?attr/actionBarSize</item>
		<item name="android:layout_centerVertical">true</item>
		<item name="android:layout_marginStart">@dimen/activity_margin_small</item>
		<item name="android:layout_marginEnd">@dimen/activity_margin_small</item>
		<item name="android:background">@drawable/background_pressed_circle_state</item>
	</style>

	<style name="toolbarTitleTextView">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_centerInParent">true</item>
		<item name="android:layout_gravity">center</item>
		<item name="android:textColor">?android:textColorPrimary</item>
		<item name="android:textSize">@dimen/font_size_medium_title</item>
		<item name="android:fontFamily">@font/sfp_bold</item>
		<item name="android:background">@null</item>
	</style>

	<style name="profileEditTextNormalGray">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginBottom">@dimen/activity_margin_small</item>
		<item name="android:background">@null</item>
		<item name="android:textColor">?android:textColorTertiary</item>
		<item name="android:textSize">@dimen/font_size_normal</item>
	</style>

	<style name="profileEditTextWhite">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginBottom">@dimen/activity_margin</item>
		<item name="android:background">@null</item>
		<item name="android:textColor">?android:textColorPrimary</item>
		<item name="android:textColorHint">@color/textColorGray</item>
		<item name="android:textSize">@dimen/font_size_medium</item>
	</style>

	<style name="textViewWhite">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginBottom">@dimen/activity_margin</item>
		<item name="android:background">@null</item>
		<item name="android:textColor">?android:textColorPrimary</item>
		<item name="android:textColorHint">@color/textColorGray</item>
	</style>

	<style name="textViewWhite.normal">
		<item name="android:textSize">@dimen/font_size_normal</item>
	</style>

	<style name="textViewWhite.medium">
		<item name="android:textSize">@dimen/font_size_medium</item>
	</style>


	<style name="textViewWhite.number">
		<item name="android:textSize">@dimen/font_size_number</item>
	</style>

	<style name="textViewWhite.title">
		<item name="android:textSize">@dimen/font_size_medium_title</item>
	</style>


	<style name="textViewWhite.medium.title">
		<item name="android:textSize">@dimen/font_size_medium_title</item>
	</style>


	<style name="borderLine">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">1dp</item>
		<item name="android:background">?borderLineColor</item>
	</style>

	<style name="borderLine.2">
		<item name="android:layout_height">1.5dp</item>
		<item name="android:background">?borderLineColorSecondary</item>
	</style>

	<style name="switchStyle">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:paddingLeft">4dp</item>
		<item name="android:paddingRight">6dp</item>
		<item name="android:paddingTop">4dp</item>
		<item name="android:paddingBottom">4dp</item>
		<item name="android:layout_gravity">center</item>
		<item name="android:textColor">#FFFFFF</item>
	</style>

	<style name="textInputLayoutStyle">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginBottom">@dimen/activity_margin</item>
		<item name="android:textColor">?android:textColorPrimary</item>
		<item name="android:textColorHint">@color/textColorGray</item>
		<item name="android:fontFamily">@font/sfp_light</item>
		<item name="android:textColorHintInverse">?android:textColorPrimary</item>
	</style>

	<style name="textInputEditTextStyle">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:freezesText">true</item>
		<item name="android:paddingBottom">@dimen/activity_padding_large</item>
		<item name="android:maxLines">1</item>
		<item name="android:textSize">@dimen/font_size_medium</item>
		<item name="android:singleLine">true</item>
		<item name="android:textColor">?android:textColorPrimary</item>
		<item name="android:textColorHintInverse">?android:textColorPrimary</item>
		<item name="android:fontFamily">@font/sfp_regular</item>
	</style>

	<style name="HintInputTextAppearance" parent="TextAppearance.AppCompat">
		<item name="android:textColor">?android:textColorTertiary</item>
		<item name="android:textSize">12sp</item>
		<item name="android:textColorHintInverse">?android:textColorTertiary</item>
		<item name="colorControlNormal">?android:textColorTertiary</item>
		<item name="colorControlActivated">?android:textColorTertiary</item>
		<item name="colorControlHighlight">?android:textColorTertiary</item>
		<item name="colorPrimaryDark">?android:textColorTertiary</item>
		<item name="colorPrimary">?android:textColorTertiary</item>
		<item name="fontFamily">@font/sfp_light</item>
		<item name="android:fontFamily">@font/sfp_light</item>
		<item name="colorAccent">?android:textColorTertiary</item>
		<item name="android:textColorLink">?android:textColorTertiary</item>
		<item name="android:textColorHint">?android:textColorTertiary</item>

	</style>


	<style name="InputTextAppearance" parent="TextAppearance.AppCompat">
		<item name="android:textColor">?android:textColorPrimary</item>
		<item name="android:textColorHint">?android:textColorPrimary</item>
		<item name="android:textSize">14sp</item>
		<item name="colorPrimaryDark">?android:textColorPrimary</item>
		<item name="colorPrimary">?android:textColorPrimary</item>
		<item name="colorAccent">?android:textColorPrimary</item>
		<item name="android:fontFamily">@font/sfp_light</item>
	</style>

	<style name="ErrorTextAppearance" parent="TextAppearance.AppCompat">
		<item name="android:textColor">@color/error_color</item>
		<item name="android:textColorHint">@color/error_color</item>
		<item name="android:textSize">10sp</item>
		<item name="colorAccent">@color/error_color</item>
		<item name="android:fontFamily">@font/sfp_light</item>
	</style>

	<style name="AppDialog" parent="Theme.AppCompat.Dialog">
		<item name="windowNoTitle">true</item>
		<item name="android:windowIsFloating">false</item>
		<item name="android:windowBackground">@android:color/transparent</item>
	</style>

	<style name="AppDialogLight" parent="Theme.AppCompat.Light.Dialog">
		<item name="windowNoTitle">true</item>
		<item name="android:windowIsFloating">false</item>
		<item name="android:windowBackground">@android:color/transparent</item>
	</style>

	<style name="KeyboardButton">
		<item name="android:textColor">@android:color/white</item>
		<item name="layout_columnWeight">1</item>
		<item name="android:gravity">center</item>
		<item name="android:textSize">28sp</item>
		<item name="android:fontFamily">@font/sfp_light</item>
		<item name="android:background">?selectableItemBackgroundBorderless</item>
		<item name="android:paddingTop">10dp</item>
		<item name="android:paddingBottom">10dp</item>
	</style>
</resources>